<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dasi.infrastructure.persistent.dao.IUserAwardDao">

    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.UserAward">
        <id     property="id"               column="id"/>
        <result property="orderId"          column="order_id"/>
        <result property="userId"           column="user_id"/>
        <result property="awardId"          column="award_id"/>
        <result property="activityId"       column="activity_id"/>
        <result property="awardSource"      column="award_source"/>
        <result property="awardName"        column="award_name"/>
        <result property="awardDesc"        column="award_desc"/>
        <result property="awardDeadline"    column="award_deadline"/>
        <result property="awardTime"        column="award_time"/>
        <result property="createTime"       column="create_time"/>
        <result property="updateTime"       column="update_time"/>
    </resultMap>

    <select id="queryUserAwardList" parameterType="com.dasi.infrastructure.persistent.po.UserAward" resultMap="dataMap">
        SELECT order_id, user_id, award_id, activity_id, award_source, award_name, award_desc, award_deadline, award_time
        FROM user_award
        WHERE user_id = #{userId} AND activity_id = #{activityId} AND award_source = #{awardSource}
        ORDER BY award_time DESC
    </select>


    <insert id="saveUserAward" parameterType="com.dasi.infrastructure.persistent.po.UserAward">
        INSERT INTO user_award (order_id, user_id, award_id, activity_id, award_source, award_name, award_desc, award_deadline, award_time)
        VALUES (#{orderId}, #{userId}, #{awardId}, #{activityId}, #{awardSource}, #{awardName}, #{awardDesc}, #{awardDeadline}, #{awardTime})
    </insert>


</mapper>