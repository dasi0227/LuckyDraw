<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">

    <contextName>logback</contextName>

    <!-- 日志输出路径 -->
    <property name="LOG_PATH" value="./log"/>

    <!-- 开发环境下，调低一些三方库日志噪音 -->
    <springProfile name="dev">
        <logger name="com.zaxxer.hikari" level="ERROR"/>
        <logger name="org.redisson" level="ERROR"/>
        <logger name="io.netty.resolver.dns" level="ERROR"/>
        <logger name="org.springframework.amqp" level="ERROR"/>
        <logger name="org.springframework.boot.web.servlet.context" level="ERROR"/>
    </springProfile>

    <!--  公共转换规则 -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>

    <!-- ================== 控制台输出（主业务日志） ================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-8.-8thread] %-5p %-40class{1} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- ================== job.log（定时任务日志） ================== -->
    <appender name="JOB_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/job.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-8.-8thread] %-5p %-40class{1} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <logger name="com.dasi.trigger.job" level="INFO" additivity="false">
        <appender-ref ref="JOB_FILE"/>
    </logger>

</configuration>